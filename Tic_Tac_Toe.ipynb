    "from IPython.display import clear_output\n",
    "def display(gamelist):\n",
    "    \n",
    "    clear_output()\n",
    "    print(' {} | {} | {} '.format(gamelist[1],gamelist[2],gamelist[3]))\n",
    "    print('-----------')\n",
    "    print(' {} | {} | {} '.format(gamelist[4],gamelist[5],gamelist[6]))\n",
    "    print('-----------')\n",
    "    print(' {} | {} | {} '.format(gamelist[7],gamelist[8],gamelist[9]))"
   ]
  },
